{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    // Required for certain syntax usages
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": "off"
  }
}
