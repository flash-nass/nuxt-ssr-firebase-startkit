{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    // Required for certain syntax usages
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": ["promise"],
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "rules": {
    "no-console": "off"
  }
}
